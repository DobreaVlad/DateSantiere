@{
    ViewData["Title"] = "Prețuri";
}

<style>
/* Pricing Page Styles */
.pricing-page {
    padding: 60px 0;
    background: #e5e7eb;
}

.pricing-header {
    text-align: center;
    margin-bottom: 50px;
}

.pricing-header h1 {
    font-size: 42px;
    margin-bottom: 15px;
    color: #374151;
}

.pricing-header p {
    font-size: 18px;
    color: #6b7280;
}

.pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 280px));
    gap: 20px;
    margin-bottom: 60px;
    justify-content: center;
}

.pricing-card {
    background: white;
    padding: 20px 15px;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    position: relative;
    transition: transform 0.3s, box-shadow 0.3s;
    display: flex;
    flex-direction: column;
    border: 1px solid #e5e7eb;
}

.pricing-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 24px rgba(245, 158, 11, 0.2);
    border-color: #f59e0b;
}

.pricing-card.featured {
    border: 3px solid #f59e0b;
    transform: scale(1.05);
}

.pricing-card.featured:hover {
    transform: scale(1.05) translateY(-5px);
}

.pricing-badge {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: #ffffff;
    color: #6b7280;
    padding: 6px 20px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    border: 2px solid #e5e7eb;
}

.featured-badge {
    background: #f59e0b;
    color: white;
    border: 2px solid #f59e0b;
}

.pricing-card h3 {
    font-size: 22px;
    margin: 15px 0 10px 0;
    color: #1f2937;
    text-align: center;
}

.price {
    text-align: center;
    margin-bottom: 20px;
}

.price-amount {
    font-size: 36px;
    font-weight: 700;
    color: #f59e0b;
}

.price-period {
    font-size: 14px;
    color: #f59e0b;
}

.pricing-features {
    list-style: none;
    margin: 0 0 20px 0;
    padding: 0;
    flex: 1;
}374151;
    font-size: 13px;
    font-weight: 600;
    text-align: center;
    border-bottom: 1px solid #f3f4f6;
}

.pricing-features li:last-child {
    border-bottom: none
    color: #d4d4d8;
    font-size: 13px;
    font-weight: 600;
    text-align: center;
}

.pricing-card .btn-large {
    width: 100%;
    text-align: center;
    margin-top: auto;
}
